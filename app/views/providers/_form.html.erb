<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :nit, required: true %>
    <%= f.input :contact_person, required: true %>
    <%= f.input :contact_number %>
    <%= f.input :bank_id, collection: Bank.all, label_method: :name, value_method: :id, prompt: "Seleccionar Banco", required: true %>
    <%= f.input :account_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Guardar" %>
  </div>
<% end %>
