<div class="form-provider d-flex justify-content-center">
  <div class="container bg-white rounded-5 shadow p-5">
    <div class="row">
      <div class="col">
        <%= simple_form_for(@provider) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name,
                        required: true,
                        label: "Nombre del proveedor" %>
            <%= f.input :nit,
                        required: true,
                        label: "NIT" %>
            <%= f.input :contact_person,
                        required: true,
                        label: "Nombre de contacto" %>
            <%= f.input :contact_number,
                        label: "Número de celular" %>
            <%= f.input :bank_id, collection: Bank.all,
                        label_method: :name,
                        value_method: :id,
                        prompt: "Seleccionar Banco",
                        required: true,
                        label: "Nombre del banco" %>
            <%= f.input :account_number,
                        label: "Número de cuenta" %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Guardar",
                          class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
